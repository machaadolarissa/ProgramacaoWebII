@model IEnumerable<Larissa_Machado_Projeto1.Models.TbAlimento>

@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>Index</h1>

<p>
    <a asp-action="Create">Criar</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.IdTipoQuantidade)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Nome)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Carboidrato)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.VitaminaA)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.VitaminaB)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.IdTipoQuantidade)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Nome)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Carboidrato)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.VitaminaA)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.VitaminaB)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.IdAlimento">Edit</a> |
                <a asp-action="Details" asp-route-id="@item.IdAlimento">Details</a> |
                <a asp-action="Delete" asp-route-id="@item.IdAlimento">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
